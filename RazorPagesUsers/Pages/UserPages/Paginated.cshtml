@page
@model RazorPagesUsers.Pages.UserPages.PaginatedModel

<h2>Pagination Example</h2>

<p>
    <a asp-page="Create2">Create New</a>
</p>

<table class="table table-striped">
    @foreach (var item in Model.Data)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.EmailAddress</td>
            <td>
                <a asp-page="./Edit2" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details2" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<div>
    <ul class="pagination">
        <li class="page-item @(!Model.ShowFirst? "disabled":"")">
            <a asp-page="./Paginated" asp-route-CurrentPage="1" class="page-link"> << </a>
        </li>

        <li class="page-item @(!Model.ShowPrevious? "disabled":"")">
            <a asp-page="./Paginated" asp-route-CurrentPage="@(Model.CurrentPage -1)" class="page-link"> < </a>
        </li>
        <li class="page-item  @(!Model.ShowNext? "disabled":"")">
            <a asp-page="./Paginated" asp-route-CurrentPage="@(Model.CurrentPage + 1)" class="page-link"> > </a>
        </li>

        <li class="page-item  @(!Model.ShowLast? "disabled":"")">
            <a asp-page="./Paginated" asp-route-CurrentPage="@Model.TotalPages" class="page-link"> >> </a>
        </li>
    </ul>
</div>